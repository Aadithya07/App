#:kivy 1.0.9
<SignupScreen>:
    name: "signup"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Signup"
            font_size: 24
            bold: True

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False

        TextInput:
            id: email
            hint_text: "Email"
            multiline: False

        TextInput:
            id: password
            hint_text: "Password"
            password: True
            multiline: False

        TextInput:
            id: confirm_password
            hint_text: "Confirm Password"
            password: True
            multiline: False

        Button:
            text: "Register"
            on_release: root.signup(username.text, email.text, password.text, confirm_password.text)


        Button:
            text: "Back to Login"
            on_release: app.root.current = "login"
